# Use strict-peer-dependencies to ensure all peer dependencies are installed correctly
strict-peer-dependencies=true

# Use node-linker=hoisted for better compatibility with some tools
node-linker=hoisted

# Save exact versions in package.json
save-exact=true

# Enable pnpm workspace features
shared-workspace-lockfile=true

# Use the fastest compression level for the .pnpm store
compression-level=1
